<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<variable name="logDirectory" value="${basedir}/logs" />
	<variable name="footer" value="=========================== END ===========================${newline}" />
	<variable name="encoding" value="UTF-8" />

	<targets async="true">

		<!-- КОНСОЛЬ -->
		<target xsi:type="ColoredConsole"
		        name="console"
		        layout="${time}|${level:uppercase=true}|${logger:shortName=true}|${message}${onexception:${newline}${exception:format=Type,Message}}"
		        error="false"
				useDefaultRowHighlightingRules="false">
			<highlight-row condition="level == LogLevel.Trace" foregroundColor="DarkGray" />
			<highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
			<highlight-row condition="level == LogLevel.Info" foregroundColor="Green" />
			<highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
			<highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
			<highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
		</target>
		
		<!-- Общий лог: Trace, Debug, Info, Warn -->
		<target xsi:type="File"
		        name="fileAll"
		        fileName="${logDirectory}/info/${shortdate}_app.log"
				layout="${time}| ${level:uppercase=true}>> ${callsite:includeNamespace=false:cleanNamesOfAsyncContinuations=true}>> ${message} ${exception:format=Type,Message}"
		        encoding="${encoding}"
				archiveFileName="${logDirectory}/archive/app_${shortdate}_{#}.log"
		        archiveNumbering="Rolling"
		        archiveEvery="Day"
				concurrentWrites="true"
				KeepFileOpen="false"
		        maxArchiveFiles="5"
		        footer="${footer}"/>

		<!-- Ошибки и фатальные ошибки -->
		<target xsi:type="File"
		        name="fileError"
		        fileName="${logDirectory}/error/${shortdate}_error.log"
				layout="${time}| ${level:uppercase=true}>> ${callsite:includeNamespace=false:cleanNamesOfAsyncContinuations=true}>> ${message} ${newline}${exception:format=Type,Message} ${newline}"
		        encoding="${encoding}"
		        archiveFileName="${logDirectory}/archive/error_${shortdate}_{#}.log"
				archiveNumbering="Rolling"
		        archiveEvery="Day"
		        maxArchiveFiles="5"
				concurrentWrites="true"
				KeepFileOpen="false"
		        footer="${footer}"/>

	</targets>

	<!-- Правила: что и куда писать -->
	<rules>
		<!-- ВСЕ сообщения идут в КОНСОЛЬ -->
		<logger name="*"
				minlevel="Info"
				maxlevel="Fatal"
				writeTo="console" />
		
		<!-- Все уровни от Trace до Warn идут в fileAll -->
		<logger name="*"
				minlevel="Trace"
				maxLevel="Fatal"
				writeTo="fileAll" />

		<!-- Ошибки и фатальные ошибки идут в отдельный файл -->
		<logger name="*"
				minlevel="Error"
				maxLevel="Fatal"
		        writeTo="fileError" />
	</rules>
</nlog>